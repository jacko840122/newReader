<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/book_bloc_item_list"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/list_view_item_selector"
    android:gravity="bottom|center"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_height="416px"
        android:layout_width="312px">

        <ImageView
            android:id="@id/icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/no_cover" />

        <TextView
            android:id="@id/title"
            style="@style/ThumbnailMediumTitle"
            android:layout_margin="15dp"
            android:layout_width="219.5dp"
            android:layout_height="30dp"
            android:layout_below="@id/icon"
            android:layout_alignParentTop="true"
            android:background="@android:color/transparent"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="#ff454545"
            android:textSize="36px" />

        <ImageView
            android:id="@id/format"
            style="@style/BookFormat"
            android:layout_alignBottom="@id/icon"
            android:visibility="invisible"
            android:layout_alignRight="@id/icon" />

        <TextView
            android:id="@+id/read_progress"
            android:layout_width="108dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@id/icon"
            android:layout_alignLeft="@id/icon"
            android:background="@drawable/read_progress_bg"
            android:gravity="center_vertical|left"
            android:visibility="gone"
            android:paddingLeft="14px"
            android:textColor="#ffffffff"
            android:textSize="20px" />
        
        <ImageView
            android:id="@+id/delete"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/delete_btn" />
    </RelativeLayout>

</LinearLayout>